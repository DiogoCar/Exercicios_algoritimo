package exercicio_fix;

import javax.swing.JOptionPane;
/**
 *
 * @author Discente
 */
public class Exercicio_fix {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here

    
    double BRL,USL;
        
        String sn1;
   
        sn1=JOptionPane.showInputDialog(null, "Q4: Digite o valor: ");
       
        
        BRL = Double.parseDouble(sn1);
        
     
       USL = BRL / 5;
      
       
       if (USL >=1)
       {JOptionPane.showMessageDialog(null,"Seu valor em dórla é: " + USL + "dólares");} 
       else {JOptionPane.showMessageDialog ( null, "Seu valor em dórla é: " + USL + " cents");
       
       }
    }
}
